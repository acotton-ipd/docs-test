{
	"tags": {
		"allowUnknownTags": true,
		"dictionaries": ["jsdoc", "closure"]
	},
	"source": {
    "include": ["../src/app/"],
		"includePattern": ".+\\.ts(doc|x)?$",
		"excludePattern": "(^|\\/|\\\\)_"
	},
  "opts": {
    "recurse": true,
    "tutorials": "../tutorials"
  },
	"plugins": [
    "plugins/markdown",
    "plugins/summarize"
  ],
	"templates": {
		"cleverLinks": false,
		"monospaceLinks": false
	}
}
