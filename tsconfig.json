{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "outFile": "app.js"
    },
    "filesGlob": [
        "**/*.ts",
        "!node_modules/**",
        "!bower_components/**",
        "!public/**"
    ],
    "compileOnSave": false,
    "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2,
      "convertTabsToSpaces": false
    }
}
